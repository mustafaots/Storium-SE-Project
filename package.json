{
  "name": "storium",
  "version": "1.0.0",
  "description": "Storium Inventory Management System",
  "author": {
    "name": "Hai Bou",
    "email": "haibou@example.com"
  },
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev:frontend": "npm run dev --prefix frontend",
    "dev:backend": "npm run dev --prefix backend",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "dev": "concurrently -k \"npm run dev:frontend\" \"npm run dev:backend\" \"npm run dev:electron\"",
    "build:frontend": "npm run build --prefix frontend",
    "build": "npm run build:frontend && electron-builder"
  },
  "dependencies": {
    "jspdf": "^3.0.4",
    "jspdf-autotable": "^5.0.2"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "vite": "^7.1.14",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.haibou.storium",
    "extraResources": [
      "backend/**"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    }
  }
}
